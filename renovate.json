{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "forkProcessing": "enabled",
  "timezone": "America/New_York",
  "schedule": ["before 4am on Monday"],
  "pinDigests": false,
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": { "enabled": true },
  "transitiveRemediation": true,
  "vulnerabilityAlertsOptions": {
    "minimumSeverity": "low"
  },

  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 4am on Monday"]
  },

  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "branchPrefix": "renovate/",
  "description": "Simplified Renovate config with uv and SemVer enforcement",

  "allowedPostUpgradeCommands": [
    "^uv( |$)pip compile.*$",
    "^uv( |$)pip install.*$",
    "^uv( |$)pip check$"
  ],

  "packageRules": [
    {
      "description": "Prioritize security updates - no approval needed",
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "matchDatasources": ["pypi", "npm", "github-releases", "github-tags"],
      "labels": ["security", "dependencies"],
      "automerge": true,
      "stabilityDays": 0,
      "prPriority": 10
    },
    {
      "description": "Critical/high severity vulnerabilities - immediate action",
      "vulnerabilitySeverity": ["CRITICAL", "HIGH"],
      "labels": ["security", "critical"],
      "automerge": false,
      "prPriority": 20,
      "schedule": ["at any time"]
    },
    {
      "description": "Prefer full SemVer tags for GitHub Actions and convert from commit SHAs",
      "matchManagers": ["github-actions"],
      "versioning": "semver",
      "rangeStrategy": "replace",
      "pinVersions": true,
      "pinDigests": false
    },
    {
      "description": "Automerge minor and patch updates after a short delay",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "stabilityDays": 1
    },
    {
      "description": "Python requirements via uv with stable and pre-release conflict checks",
      "matchManagers": ["pip_requirements"],
      "ignoreUnstable": false,
      "postUpgradeTasks": {
        "commands": [
          "uv pip compile -o requirements.txt requirements.in",
          "uv pip compile --pre -o requirements-pre.txt requirements.in",
          "uv pip install -r requirements.txt",
          "uv pip check"
        ],
        "fileFilters": [
          "requirements.in",
          "requirements.txt",
          "requirements-pre.txt"
        ]
      }
    },
    {
      "description": "Block starlette updates due to known ESPHome/PlatformIO compatibility issues",
      "matchPackageNames": ["starlette"],
      "enabled": false
    }
  ]
}
