{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "mergeConfidence:all-badges",
    "group:recommended",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "forkProcessing": "enabled",
  "schedule": ["before 4am on Monday"],
  "timezone": "America/New_York",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Automerge minor and patch updates with slight delay",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeSchedule": ["after 1 hour"]
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "schedule": ["before 4am on Monday"]
    },
    {
      "description": "Group Python dependency updates",
      "matchManagers": ["pip_requirements"],
      "groupName": "Python Dependencies",
      "schedule": ["before 4am on Monday"]
    },
    {
      "description": "Recompile requirements.txt from requirements.in with pip-compile",
      "matchManagers": ["pip_requirements"],
      "postUpdateOptions": ["pip-compile"]
    },
    {
      "description": "Update ESPHome and related packages carefully",
      "matchPackageNames": ["esphome", "aioesphomeapi", "esphome-dashboard", "esphome-glyphsets"],
      "ignoreUnstable": false,
      "schedule": ["before 4am on the first day of the month"],
      "labels": ["esphome", "critical"]
    },
    {
      "description": "Security updates should be prioritized",
      "matchUpdateTypes": ["patch"],
      "matchDatasources": ["pypi", "github-releases"],
      "schedule": ["at any time"],
      "labels": ["security"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 4am on Monday"]
  },
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "branchPrefix": "renovate/",
  "commitMessagePrefix": "ðŸ¤– ",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{footer}}}"
}
