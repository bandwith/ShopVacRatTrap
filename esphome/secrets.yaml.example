---
# ShopVac Rat Trap 2025 - ESPHome Secrets Configuration
# Update these values for your specific installation

# WiFi Network Configuration
wifi_ssid: YourNetworkName
wifi_password: YourWiFiPassword

# Security Keys (Generate new keys for production use)
# Generate OTA password: openssl rand -base64 16
ota_password: secure_ota_password_here

# Generate API encryption key: openssl rand -base64 32
api_encryption_key: your_32_character_base64_key_here

# Fallback Access Point Configuration
ap_password: RatTrap2025_Config

# Optional: Home Assistant Integration
# home_assistant_url: "http://homeassistant.local:8123"
# home_assistant_token: "your_long_lived_access_token"

# Optional: MQTT Configuration (if preferred over API)
# mqtt_broker: "homeassistant.local"
# mqtt_username: "rat_trap_user"
# mqtt_password: "mqtt_password_here"  # pragma: allowlist secret

# Device Specific Settings
device_name: rat-trap-2025
friendly_name: ShopVac Rat Trap 2025

# Calibration Values (adjust based on installation)
# detection_threshold_mm: 150    # Distance threshold for rodent detection
# vacuum_runtime_seconds: 8      # How long to run vacuum
# cooldown_period_seconds: 30    # Minimum time between triggers

# Notification Settings
# pushover_user_key: "your_pushover_user_key"
# pushover_api_token: "your_pushover_app_token"
